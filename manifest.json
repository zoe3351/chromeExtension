{
    "manifest_version": 2,
    "name": "QUICK WIKI",
    "description": "This extension allows the user to select contends and right click to search it on Wikipedia.",
    "version": "1.0",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Wiki here!"
    },
    "permissions": [
        "activeTab",
        "storage",
        "contextMenus"
    ]
}